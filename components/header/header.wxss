@import "../../app.wxss";

.logo {
  width: 80%;
  height: 92rpx;
  margin: 20rpx;
  background: url("https://www.zhyuanyu.com/wp-content/themes/zhyuanyu/skin/pc/images/logo.png") no-repeat;
  background-size: contain;
}

.sidebar-btn {
  position: absolute;
  top: 38rpx;
  right: 38rpx;
  font-weight: 400;
}

.sidebar {
  background: #fff;
  width: 65%;
  padding-top: 100rpx;
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 2;
  overflow: hidden;
}

.sidebar .item {
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 30rpx;
  border-bottom: 1px solid #f2f2f2;
}

.sidebar .item text {
  font-size: 38rpx;
}

.sidebar .item .menu-icon {
  margin: 0 20rpx;
}

.mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,.8);
  z-index: 1;
}