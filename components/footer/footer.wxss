@import "../../app.wxss";

/* 立即购买 */
.buy-now {
  background: url("https://www.zhyuanyu.com/wp-content/themes/zhyuanyu/skin/mobile/images/floor_3.jpg") no-repeat center bottom;
  background-size: 640rpx auto;
  padding-bottom: 60rpx;
}

.buy-now .title-area {
  position: relative;
  margin: 50rpx 0;
  text-align: center;
}

.buy-now .title-area .title {
  font-weight: bold;
  font-size: 56rpx;
  color: #000;
  text-align: center;
  line-height: 140rpx;
}

.buy-now .title-area .subtitle {
  color: #333;
  font-size: 32rpx;
  letter-spacing: 2rpx;
}

.buy-now .title-area .tit-icon {
  width: 80rpx;
  height: 25rpx;
  display: block;
  position: absolute;
  top: 60rpx;
  background: url("https://www.zhyuanyu.com/wp-content/themes/zhyuanyu/skin/mobile/images/line.png") no-repeat center;
  background-size: 80rpx auto;
}

.buy-now .title-area .left-icon {
  left: 3%;
}

.buy-now .title-area .right-icon {
  right: 3%;
}

.buy-now .content {
  width: 94%;
  margin: 0 auto;
}

.buy-now .content .item {
  float: left;
  width: 49%;
  margin-right: 2%;
  margin-bottom: 2%;
}

.buy-now .content .item:nth-child(2n) {
  margin-right: 0;
}

.buy-now .content .item image {
  width: 100%;
  padding: 10rpx;
  border: 1px solid #e5e5e5;
  box-sizing: border-box;
}

/*首页导航*/
.index-nav {
  background: #3c3c3c;
}

.index-nav .item {
  float: left;
  width: 33.33%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  border-right: 1px #777 solid;
  border-bottom: 1px #777 solid;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #fff;
}

/* 页脚 */
.footer {
  width: 100%;
  text-align: center;
  background-color: #f5f5f5;
  border-top: #e3e3e3 solid 1px;
}

.footer .copyright {
  width: 94%;
  margin: 0 auto 1rpx;
  padding: 50rpx 30rpx;
  font-size: 35rpx;
  color: #666;
}